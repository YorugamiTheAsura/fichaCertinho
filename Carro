package entidades;

//classe derivada de veiculo 
public class Carro extends Veiculos {

	private Integer portas;

	public Carro(String placa, String marca, Integer ano, Double preco, Double precoTotal, String modelo,
			Integer portas) {
		super(placa, marca, ano, preco, precoTotal, modelo);
		this.portas = portas;
	}

	

	public Integer getPortas() {
		return portas;
	}

	public void setPortas(Integer portas) {
		this.portas = portas;
	}

	@Override
	public String toString() {
	    return "Carro [Placa: " + placa + ", Marca: " + marca + ", Ano: " + ano + ", Preço: R$ " + String.format("%.2f", preco) +
	           ", Preço Total (com seguro): R$ " + String.format("%.2f", precoTotal) + ", Modelo: " + modelo + 
	           ", Portas: " + portas + "]";
	}
}
